{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2018", "esnext.asynciterable"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": "app",
    "baseUrl": "."
  },
  "include": ["app/**/*", "./app/**/*.ts"]
}